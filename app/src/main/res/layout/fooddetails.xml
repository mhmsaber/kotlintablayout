<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.Fooddetails">

    <ImageView
        android:id="@+id/foodimageup"
        android:layout_width="match_parent"

        android:layout_marginRight="@dimen/_30sdp"

        android:layout_height="@dimen/_300sdp"

        android:scaleType="center"
        />


    <TextView
        android:id="@+id/foodnameup"
        android:layout_width="@dimen/_116sdp"
        android:layout_height="@dimen/_54sdp"

        android:gravity="center"
        android:hint="foodname"
        android:layout_marginRight="@dimen/_30sdp"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/pink"




            >

            <TextView
                android:id="@+id/largeup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_180sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="meduam"
                android:textSize="@dimen/_20ssp"
                android:textStyle="italic" />


            <ImageView
                android:id="@+id/remov1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_230sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/remove"
                app:srcCompat="@drawable/remove" />

            <TextView
                android:id="@+id/cont1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_180sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="0"

                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"

                />


            <ImageView
                android:id="@+id/add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_140sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/add"
                app:srcCompat="@drawable/add" />


        </androidx.cardview.widget.CardView  >


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/pink"

            android:id="@+id/cart2"


            >

            <TextView
                android:id="@+id/mediumup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_180sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="meduam"
                android:textSize="@dimen/_20sdp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/remov2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_230sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/remove"
                app:srcCompat="@drawable/remove" />


            <TextView
                android:id="@+id/cont2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_180sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="0"

                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"

                />


            <ImageView
                android:id="@+id/add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_140sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/add"
                app:srcCompat="@drawable/add" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/pink"
            android:elevation="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"


            android:id="@+id/cart3"

            >

            <TextView
                android:id="@+id/smalleup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_180sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="smallup"
                android:textSize="@dimen/_20ssp"
                android:textStyle="italic" />


            <ImageView
                android:id="@+id/remov3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_230sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/remove"
                app:srcCompat="@drawable/remove" />


            <TextView
                android:id="@+id/cont3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_180sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text=" 0"
                android:textSize="@dimen/_20ssp"
                android:textStyle="normal"

                />


            <ImageView
                android:id="@+id/add3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_140sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/add"
                app:srcCompat="@drawable/add" />


        </androidx.cardview.widget.CardView>














    </LinearLayout>







    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="اضافى الى سلة المشتريات"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_40sdp" />

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"

        android:textColor="@color/pink"

        android:textSize="@dimen/_20ssp"


        />





</LinearLayout>